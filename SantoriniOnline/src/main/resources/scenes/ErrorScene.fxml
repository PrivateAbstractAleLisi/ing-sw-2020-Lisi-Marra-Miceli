<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.psp58.view.UI.GUI.controller.ErrorSceneController">
   <children>
      <Pane>
         <children>
            <VBox alignment="TOP_CENTER">
               <children>
                  <Label fx:id="errorLabel" text="ERROR" textAlignment="CENTER" textFill="#f0483a">
                     <font>
                        <Font name="Avenir Next Condensed Bold" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="-2.0" />
                     </VBox.margin>
                  </Label>
                  <Line fx:id="errorLine" endX="100.0" fill="#ee3f33" startX="-100.0" stroke="#e42b2b" />
                  <Text fx:id="messageText" strokeType="OUTSIDE" strokeWidth="0.0" text="Error Message Text" textAlignment="CENTER" wrappingWidth="200.0">
                     <font>
                        <Font size="13.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="8.0" />
                     </VBox.margin>
                  </Text>
                  <ImageView fx:id="errorImage" fitHeight="49.0" fitWidth="102.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/error-flat.png" />
                     </image>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </ImageView>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="7.0" />
               </padding>
            </VBox>
         </children>
      </Pane>
   </children>
</AnchorPane>
